<h1>Listing pledges</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Stripe</th>
    <th>Amount</th>
    <th>School</th>
    <th>Instructions</th>
    <th>Billing address</th>
    <th>Billing city</th>
    <th>State</th>
    <th>Billing zip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pledges.each do |pledge| %>
  <tr>
    <td><%= pledge.first_name %></td>
    <td><%= pledge.last_name %></td>
    <td><%= pledge.stripe_id %></td>
    <td><%= pledge.amount %></td>
    <td><%= pledge.school %></td>
    <td><%= pledge.instructions %></td>
    <td><%= pledge.billing_address %></td>
    <td><%= pledge.billing_city %></td>
    <td><%= pledge.state_id %></td>
    <td><%= pledge.billing_zip %></td>
    <td><%= link_to 'Show', pledge %></td>
    <td><%= link_to 'Edit', edit_pledge_path(pledge) %></td>
    <td><%= link_to 'Destroy', pledge, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

