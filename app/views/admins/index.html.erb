<h1>Listing Admins</h1>
<div id="action_buttons">
  <%= link_to 'New Admin', new_admin_path, :class => "button blue_button" %>
</div>
<table>
  <tr>
    <th>First Name</th> 
    <th>Last Name</th>
    <th>Email</th>
    <th>Username</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admins.each do |admin| %>
  <tr>
    <td><%= admin.first_name %></td>
    <td><%= admin.last_name %></td>
    <td><%= admin.email %></td>
    <td><%= admin.username %></td>
    <td><%= link_to 'Show', admin %></td>
    <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
    <td><%= link_to 'Destroy', admin, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
