<%= form_for(@admin_session) do |f| %>
  <%= render :partial => 'layouts/error_block', :locals => {:obj => @admin_session} %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.submit "Login", :class => "button blue_button" %>
  </div>
<% end %>